@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

@*@page
@{
    ViewData["Title"] = "IndexVilla";
}*@

@*<h1>IndexVilla</h1>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}*@


<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary"> Villa List </h1>
        </div>
        <div class=" col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-database-add"></i> Create New Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupany</th>
                <th>Price</th>
                <th>Action </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Occupancy</td>
                        <td>@((item.Rate).ToString("c"))</td>
                        <td>
                            <a asp-controller="Villa" asp-action="UpdateVilla" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Villa" asp-action="DeleteVilla" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>

